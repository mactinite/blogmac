<div class="section">
    <div class="container">
        <div class="columns is-centered">
            <div class="box column is-half is-narrow">
                {{#if messages}}
                <div class="notification is-warning">
                    {{messages}}
                </div>
                {{/if}}

                <h1 class="title">
                    {{page_title}}
                </h1>

                <form action="/login" method="post">
                    <div class="user-forms">
                        <div class="field">
                            <div class="control has-icons-left has-icons-right">
                                <input class="input" placeholder="email" id="email" name="email" type="email" />
                                <span class="icon is-small is-left">
                                    <i class="fa fa-envelope"></i>
                                </span>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control has-icons-left has-icons-right">
                                <input class="input" placeholder="password" id="password" name="password" type="password" />
                                <span class="icon is-small is-left">
                                    <i class="fa fa-lock"></i>
                                </span>
                            </div>
                        </div>
                        <div class="level">
                            <div class="level-item has-tyext-centered">
                                <input class="button is-primary" type="submit" value="Login" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>