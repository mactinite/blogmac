<div ng-app="admin" class="row">
    <div class="three columns">
        <h1>Settings</h1>
        <ul class="vertical-nav light">
            <li><a href="/">Users</a></li>
            <li><a href="/">Posts</a></li>
            <li><a href="/">Pages</a></li>
            <li><a href="/">Config</a></li>
        </ul>
    </div>
    <div class="nine columns">
        <h1>User Admin</h1>
        <hr/>
        <table ng-controller="usersController" ng-init="getUsers()" class="u-full-width">
            <thead>
                <th>First Name</th>
                <th>Last Name</th>
                <th>User Name</th>
                <th>Role</th>
                <th></th>
            </thead>
            <tbody >
                <tr ng-repeat="user in users">
                    <td>{[{user.firstName}]}</td>
                    <td>{[{user.lastName}]}</td>
                    <td>{[{user.username}]}</td>
                    <td>
                        <select ng-options="idx*1 as role for (idx,role) in roles" ng-model="user.role" >
                        </select>
                    </td>
                    <td>
                        <i class="fa fa-user fa-lg"></i>
                        <i class="fa fa-check fa-lg"></i>
                        <i class="fa fa-ban fa-lg"></i>
                    </td>
                </tr>
                <tr>
                    <td colspan="1"><Label for="NewUser">Invite a new user</Label></td>
                    <td colspan="3" ><input class="u-full-width" type="email" name="NewUser" placeholder="Enter email for invite"/> </td>
                    <td colspan="1" class="text-center"><i class="fa fa-plus-circle fa-2x"></i></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript" src="/javascripts/admin.js"></script>